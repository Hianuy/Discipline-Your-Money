<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.disciplineYourMoney">


    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_hand_holding_usd_solid"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_hand_holding_usd_solid"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".Activity.activity.ExpenseActivity"
            android:theme="@style/ExpensesTheme"/>

        <activity android:name=".Activity.activity.RecipeActivity"
            android:theme="@style/RecipeTheme"/>

        <activity
            android:name=".Activity.activity.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activity.activity.RegisterActivity" /> <!-- <activity android:name=".Activity.Activity.SlideActivity" /> -->
        <!-- <activity android:name=".Activity.Activity.CadastroActivity" /> -->
        <activity android:name=".Activity.activity.LoginActivity" />
        <activity
            android:name=".Activity.activity.SlideActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Intro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>